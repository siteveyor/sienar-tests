@using Microsoft.AspNetCore.Components.Forms
@typeparam TModel

<EditForm Model="Model"
          OnValidSubmit="HandleSubmit">
	<DataAnnotationsValidator/>

	<Card Title="@Title">
		<CardContent>
			@Information

			@* This is currently disabled. Not sure why the error message isn't working but I'll need to figure it out and reapply in the future *@
			@* <ErrorMessage Message="@FormErrorMessage"/> *@

			@Fields
		</CardContent>

		<CardActions>
			<LoadingButton IsLoading="@_loading">
				@SubmitText
			</LoadingButton>
			@if (ShowReset)
			{
				<SecondaryButton ButtonType="ButtonType.Reset"
				                 OnClick="OnReset">
					@ResetText
				</SecondaryButton>
			}
			@MoreActions
		</CardActions>
	</Card>
</EditForm>