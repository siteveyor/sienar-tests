@inherits FormPage<PasswordChangeIndex, IAccountService, ChangePasswordDto>

<DocTitle Title="Change password"/>

<StandardForm Model="@Model"
              OnSubmit="OnSubmit"
              Title="Change password"
              SubmitText="Update password">
	<Information>
		<MudText>
			Please select a new password. Your new password should be at least 8 characters long and contain a mix of lowercase and uppercase letters, numbers, and special characters.
		</MudText>
		<ErrorMessage Message="@ErrorMessage"/>
	</Information>

	<Fields>
		<MudTextField @bind-Value="Model.NewPassword"
		              For="() => Model.NewPassword"
		              InputType="InputType.Password"
		              Label="Enter your new password"
		              Immediate/>
		<MudTextField @bind-Value="Model.ConfirmNewPassword"
		              For="() => Model.ConfirmNewPassword"
		              InputType="InputType.Password"
		              Label="Re-enter your new password"
		              Immediate/>
		<MudTextField @bind-Value="Model.CurrentPassword"
		              For="() => Model.CurrentPassword"
		              InputType="InputType.Password"
		              Label="Confirm your current password"
		              Immediate/>
	</Fields>
</StandardForm>