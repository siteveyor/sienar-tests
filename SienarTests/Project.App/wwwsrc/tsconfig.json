{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [
			"DOM",
			"DOM.Iterable",
			"ESNext"
		],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"baseUrl": ".",
		"paths": {
			"@account/*": [
				"./src/modules/account/*"
			],
			"@states/*": [
				"./src/modules/states/*"
			],
			"@/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"vite.config.ts",
		"src/**/*"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
